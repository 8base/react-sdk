{
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build-packages": "lerna run build --scope @8base-react/* --scope 8base-react-sdk",
    "link-packages": "./bin/link-packages.sh",
    "unlink-packages": "./bin/unlink-packages.sh",
    "test": "./bin/test.sh",
    "lint": "tslint packages/*/{src,test}/{.,**}/*.{ts,tsx}",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"packages/*/{src,test}/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"packages/*/{src,test}/**/*.{ts,tsx}\"",
    "bump": "lerna version --force-publish",
    "upgrade-8base-packages": "yarn upgrade-interactive --scope @8base --latest",
    "package:new": "hygen package new"
  },
  "devDependencies": {
    "hygen": "^6.0.4",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.1.3",
    "utility-types": "^3.10.0"
  },
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
